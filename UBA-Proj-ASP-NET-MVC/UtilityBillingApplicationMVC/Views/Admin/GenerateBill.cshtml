@section scripts {
    <script>
        function onSelectUser() {
            var selectedUserId = $("#userId").val();

            var selectedUserName = $("#userId option:selected").text();
            if (selectedUserId) {
                $(".bill-form-container").show();
                $("#selectedUserId").val(selectedUserId); // Set the selectedUserId in the hidden input field
                $("#selectedUserName").text(selectedUserName);

                // Calculate and set the total billing amount
                updateTotalBillingAmount();
            } else {
                $(".bill-form-container").hide();
            }
        }

        function updateTotalBillingAmount() {
            var billingUnit = parseInt($("#billingUnit").val());
            var totalBillingAmount = billingUnit * 8; // Assuming billing rate is 100 per unit, adjust it based on your billing logic
            $("#totalBilling").val(totalBillingAmount);
        }

        function submitForm() {
            updateTotalBillingAmount(); // Update the total billing amount before submitting the form
            $("#billForm").submit();
        }

        // Attach the event listener to the billing unit input field
        $(document).ready(function () {
            $("#billingUnit").change(function () {
                updateTotalBillingAmount();
            });
        });
    </script>
}

