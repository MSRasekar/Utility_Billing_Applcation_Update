@{
    // Cast the ViewBag.MeterInfo to the appropriate type (MeterInfo)
    var application = ViewBag.Application as ApplicationStatuses;
}


<!-- Page Wrapper -->
<div id="wrapper">
    <div class="container-fluid my-5">
        <section style="background-color: #eee">
            <div class="container py-5 text-center">
                <div class="row">
                    <div class="col">
                        <nav aria-label="breadcrumb" class="bg-light rounded-3 p-3 mb-3 text-center">
                            <h3>Application Status</h3>
                        </nav>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-8 offset-2">
                        <div class="card mb-4">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-sm-3">
                                        <p class="mb-0">Application Id</p>
                                    </div>
                                    <div class="col-sm-9">
                                        <p class="text-muted mb-0" id="connType">
                                            @application.ApplicationStatusId
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-lg-8 offset-2">
                        <div class="card mb-4">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-sm-3">
                                        <p class="mb-0">Application Status</p>
                                    </div>
                                    <div class="col-sm-9">
                                        <p class="text-muted mb-0" id="requiredLoad">
                                            @application.Status
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </section>
    </div>
</div>
