@{
    var bill = ViewBag.BillHistories as BillHistories; // Assuming you are passing a single BillingHistory object using ViewBag.Bills
}

<!-- Page Wrapper -->
<div id="wrapper">
    <div class="container-fluid my-5">
        <section style="background-color: #eee">
            <div class="container py-5 text-center">
                <div class="row">
                    <div class="col">
                        <nav aria-label="breadcrumb" class="bg-light rounded-3 p-3 mb-3 text-center">
                            <h3>Bill Information</h3>
                        </nav>
                    </div>
                </div>
                <!-- Bill Information -->
                <div class="container mt-4">
                    <div class="row justify-content-center">
                        <div class="col-md-9">
                            <div class="card">
                                <div class="card-body">
                                   

                                    <div class="bill-info">
                                        @if (bill != null)
                                        {
                                            <div class="form-group">
                                                <label for="requiredLoad">Required Load</label>
                                                <input type="text" class="form-control" id="requiredLoad" value="@bill.Meter?.RequiredLoad" disabled />
                                            </div>
                                            <div class="form-group">
                                                <label for="connectionType">Connection Type</label>
                                                <input type="text" class="form-control" id="connectionType" value="@bill.Meter?.ConnectionType" disabled />
                                            </div>
                                            <div class="form-group">
                                                <label for="billingUnit">Billing Unit</label>
                                                <input type="text" class="form-control" id="billingUnit" value="@bill.MeterReading" disabled />
                                            </div>
                                            <div class="form-group">
                                                <label for="billingStatus">Amount</label>
                                                <input type="text" class="form-control" id="billingStatus" value="@bill.BillAmount" disabled />
                                            </div>
                                            <div class="form-group">
                                                <label for="billingStatus">Status</label>
                                                <input type="text" class="form-control" id="billingStatus" value="@bill.Status" disabled />
                                            </div>
                                            <div class="form-group mt-4">
                                                <form method="post" action="@Url.Action("PayBill", "Users", new { billId = bill.BillId })">
                                                    @if (bill.Status == "Paid")
                                                    {
                                                        <button class="btn btn-primary" disabled>Pay Bill</button>
                                                    }
                                                    else
                                                    {
                                                        <button type="submit" class="btn btn-primary">Pay Bill</button>
                                                    }
                                                </form>


                                            </div>
                                        }
                                        else
                                        {
                                            <p>No billing history found for this user.</p>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
            </div>
        </section>
    </div>
</div>

